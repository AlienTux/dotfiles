// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 3, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        //"niri/workspaces",
        "niri/window"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "power-profiles-daemon",
        "idle_inhibitor",
        "pulseaudio",
        "backlight",
        //"network",
        "cpu",
        "memory",
        "temperature",
        "tray",
        "battery",
        "custom/wlogout"
    ],
    
//##############################################################################

    "niri/window": {
        "format": "{title}",
        "separate-outputs": false,
	"icon": true
    },
    
//##############################################################################

    "niri/workspaces": {
        "active-only": false,
        "disable-scroll": false,
        "all-outputs": false,
        "format": "{name}{icon}",
        "format-icons": {
            "active": "",
            "urgent": "-ÔëÆ",
            "empty": "",
            "default": ""
        }
    },
    
//##############################################################################

    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    
//##############################################################################
    
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "Ôâé",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    
//##############################################################################
    
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ", // ÔÅÆ
            "deactivated": "ÔÅ∞" // Óô® ÔÅ∞
        }
    },
    
//##############################################################################

    "tray": {
        "icon-size": 22,
        "spacing": 4
    },
    
//##############################################################################

    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<span color='#fabd2f' font-family='AtkinsonHyperlegibleMono'><big>{:%Y %B}</big>\n<tt>{calendar}</tt></span>",
        "format": "{:%a %d.%m.%Y  ||  %H:%M hrs}",
        //"format-alt": "{:%Y-%m-%d}",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months":   "<span color='#83a598' font-family='AtkinsonHyperlegibleMono'>{}</span>",
                "days":     "<span color='#ebdbb2' font-family='AtkinsonHyperlegibleMono'>{}</span>",
                "weeks":    "<span color='#fe8019' font-family='AtkinsonHyperlegibleMono'>W{}</span>",
                "weekdays": "<span color='#b8bb26' font-family='AtkinsonHyperlegibleMono'>{}</span>",
                "today":    "<span color='#fb4934' font-family='AtkinsonHyperlegibleMono'><b><u>{}</u></b></span>"
            }
        }
    },
    
//##############################################################################

    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false
    },

    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôãã","Ôãä","Ôãâ","Ôãâ","Ôãá"]
    },
    
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{essid} - {ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected Û∞§Æ",
        "format-alt": "{essid}: {ipaddr}"
    },
    
//##############################################################################

    "backlight": {
        // "device": "acpi_video1",
        "scroll-step":5,
        "format": "{percent}% {icon}",
        //"format-icons": ["Û±©é", "Û±©è", "Û±©ê", "Û±©ë", "Û±©í", "Û±©ì", "Û±©î", "Û±©ï", "Û±©ñ"]
        "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"]
        //"format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    
//##############################################################################
    
    "battery": {
        "states": {
            "good": 70,
            "warning": 40,
            "critical": 25
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        // Icons:  ‚ö° Û∞ÇÖ Û±ä§ ÔÉß
        "format-charging": "{capacity}% ÔÉß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        // Icons: Û∞Å∫ Û∞Åª Û∞Åº Û∞ÅΩ Û∞Åæ Û∞Åø Û∞ÇÄ Û∞ÇÅ Û∞ÇÇ Û∞Åπ Û∞ÇÑ Ôá¶
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    
//##############################################################################

    "pulseaudio": {
        // Icons Û∞ç¨ Û∞ç≠ 
        "scroll-step": 5, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% Ôäî {icon} {format_source}",
        "format-bluetooth-muted": "0% Ôäî Û∞ùü {format_source}",
        "format-muted": "0% Û∞ùü {format_source}",
        "format-source": " {volume}% ÔÑ∞",
        "format-source-muted": " 0% ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pamixer --default-source -t"
    },
    
//##############################################################################

    "custom/spotify": {
        "format": "{icon} {}",
        "escape": true,
        "return-type": "json",
        "max-length": 40,
        "interval": 30, // Remove this if your script is endless and write in loop
        "on-click": "playerctl -p spotify play-pause",
        "on-click-right": "killall spotify",
        "smooth-scrolling-threshold": 10, // This value was tested using a trackpad, it should be lowered if using a mouse.
        "on-scroll-up" : "playerctl -p spotify next",
        "on-scroll-down" : "playerctl -p spotify previous",
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null", // Script in resources/custom_modules folder
        "exec-if": "pgrep spotify"
    },
    
//##############################################################################

    "custom/wlogout":{
        // Icons: Û∞ê• ÔÄë
        "format": "Û∞ê•",
        //"on-click": "pkill wlogout || wlogout",
        "on-click": "wlogout",
        //"on-click": "/run/current-system/sw/bin/wleave",
        "tooltip": "false"
    },
    
//##############################################################################

    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        //"exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
         "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    }
}
